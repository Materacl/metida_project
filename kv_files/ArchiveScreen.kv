<PracticeChooseScreen>:
    MDCarousel:
        AnchorLayout:
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"

                MDLabel:
                    halign: "center"
                    text: "Практика ЕГЭ"
                    font_style: "JetBrainsMono-Label"
                    theme_text_color: 'Primary'

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "bottom"

                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_size: True
                    spacing: 10
                    padding: 50

                    MDFillRoundFlatButton:
                        text: 'Начать'
                        font_name: "JetBrainsMono"
                        on_press:
                            root.manager.transition.direction = 'down'
                            root.manager.current = 'ega'

                    MDFillRoundFlatButton:
                        text: 'Настройки'
                        font_name: "JetBrainsMono"

                    MDFillRoundFlatButton:
                        text: 'Выход'
                        font_name: "JetBrainsMono"

        AnchorLayout:
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "top"

                MDLabel:
                    halign: "center"
                    text: "Практика 2 выбора"
                    font_style: "JetBrainsMono-Label"
                    theme_text_color: 'Primary'

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "bottom"

                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_size: True
                    spacing: 10
                    padding: 50

                    MDFillRoundFlatButton:
                        text: 'Начать'
                        font_style: 'Button'
                        text_color: 1, 1, 1, 1

                    MDFillRoundFlatButton:
                        text: 'Настройки'

                    MDFillRoundFlatButton:
                        text: 'Выход'