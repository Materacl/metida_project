<EgaTestLayout>:
    orientation: 'vertical'
    spacing: 20
    padding: 60

    ScrollView:
        MDLabel:
            id: task

            size_hint_y: None
            size: self.texture_size

            font_style: "JetBrainsMono-Text"
            theme_text_color: 'Secondary'

    MDBoxLayout:
        id: answer_field_layout

        orientation: 'vertical'

        size_hint_x: 1
        size_hint_y: 0.2
        MDTextField:
            id: answer_field

            size_hint_x: 0.5

            multiline: False
            font_style: "JetBrainsMono-Text"
            hint_text: "Ответить"

            helper_text_mode: 'on_error'
            helper_text: 'Введите ответ'
            required: True

            max_text_length: 20
            color_mode: 'custom'

        MDFillRoundFlatButton:
            id: submit_btn

            text: 'Ответить'
            font_style: "JetBrainsMono-Buttons"
            font_size: 15

            on_press: root.submit_answer()